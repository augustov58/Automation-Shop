# AI Automation Shop - Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# APPLICATION
# =============================================================================

# Application URL (used for sitemap, canonical URLs, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment (development, staging, production)
NODE_ENV=development

# =============================================================================
# CALENDLY INTEGRATION
# =============================================================================

# Calendly widget URL (get from your Calendly account)
# Example: https://calendly.com/your-username/30min
NEXT_PUBLIC_CALENDLY_URL=

# Calendly API Key (optional, for advanced integrations)
CALENDLY_API_KEY=

# =============================================================================
# ANALYTICS
# =============================================================================

# Google Analytics Measurement ID
# Example: G-XXXXXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Vercel Analytics (automatically enabled on Vercel)
# No configuration needed

# Posthog Analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=

# =============================================================================
# EMAIL / CONTACT FORM
# =============================================================================

# Email service provider (SendGrid, Resend, etc.)
EMAIL_FROM=noreply@aiautomationshop.com
EMAIL_TO=info@aiautomationshop.com

# SendGrid
SENDGRID_API_KEY=

# Resend
RESEND_API_KEY=

# =============================================================================
# DATABASE (if needed in future)
# =============================================================================

# PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/automation_shop

# MongoDB
# MONGODB_URI=mongodb://localhost:27017/automation_shop

# =============================================================================
# AUTHENTICATION (if needed in future)
# =============================================================================

# NextAuth.js
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your-secret-key-here

# OAuth Providers (Google, GitHub, etc.)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# =============================================================================
# CMS / CONTENT (if needed in future)
# =============================================================================

# Contentful
# CONTENTFUL_SPACE_ID=
# CONTENTFUL_ACCESS_TOKEN=
# CONTENTFUL_PREVIEW_ACCESS_TOKEN=

# Sanity
# NEXT_PUBLIC_SANITY_PROJECT_ID=
# NEXT_PUBLIC_SANITY_DATASET=
# SANITY_API_TOKEN=

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Stripe (for payments)
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=

# Uploadcare (for file uploads)
# NEXT_PUBLIC_UPLOADCARE_PUBLIC_KEY=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHAT=false
NEXT_PUBLIC_ENABLE_NEWSLETTER=false

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Debug mode (shows additional logs)
DEBUG=false

# Disable telemetry (Next.js anonymous usage data)
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# SECURITY
# =============================================================================

# Rate limiting (requests per minute)
RATE_LIMIT_MAX=100

# CORS allowed origins (comma-separated)
# CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit .env.local or .env files to version control
# 2. NEXT_PUBLIC_* variables are exposed to the browser
# 3. Other variables are only available server-side
# 4. Update .gitignore to exclude .env* files
# 5. On Vercel, add these in Project Settings > Environment Variables
